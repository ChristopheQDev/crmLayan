{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <h1>Customer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ customer.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ customer.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>Date_create</th>
                <td>{{ customer.dateCreate ? customer.dateCreate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_last_email</th>
                <td>{{ customer.dateLastEmail ? customer.dateLastEmail|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Has_answered</th>
                <td>{{ customer.hasAnswered ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Has_consommed</th>
                <td>{{ customer.hasConsommed ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('customer_index') }}">back to list</a>

    <a href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>

    {{ include('customer/_delete_form.html.twig') }}
{% endblock %}
